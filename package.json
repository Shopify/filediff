{
  "name": "filediff",
  "private": true,
  "description": "Create a filediff comment to compare file size changes",
  "version": "0.0.1",
  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "ncc build index.ts --minify --license LICENSE",
    "watch": "ncc build index.ts --watch --minify",
    "lint": "prettier --check . !dist/index.js",
    "format": "prettier '.' !dist/index.js --write"
  },
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "globby": "^15.0.0",
    "pretty-bytes": "^7.1.0"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/node": "^22.0.0",
    "@vercel/ncc": "^0.38.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false,
    "trailingComma": "all"
  }
}
